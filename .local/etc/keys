! capslock
! keycode 79 = Caps_Lock
! AltGr
keycode 105 = ISO_Level3_Shift
! shift
clear Shift
keycode 135 = Shift_R
add Shift = Shift_R
!keycode 62 = Shift_Lock
!add Shift = Shift_Lock
! Control
clear Control
keycode 108 = Control_R
add Control = Control_R
add Control = Control_L

! use 94 for altgr
clear mod1
keycode 64 = ISO_Level3_Shift
keycode 94 = Alt_L
add mod1 = Alt_L

! vimkeystoarrowkeys
! key        normal	shift  mode_shift  mode_shift+shift	altgr 	shift+altgr !
!-----------------------------------------------------------------------------------!
